<%- include('../partials/header.ejs') %>

<h3><%= taskCategory.name %></h3>

<ul>
    <% taskCategory.task.forEach(function(task) { %>
        <li>
            <form action="/task/<%= taskCategory.id %>/<%= task.id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
            </form>
            <a href="/task/<%= task.id %>">
                <%= task.name %>
            </a>
        </li>
        <% }); %>
</ul>

<form action="/task/<%= taskCategory.id %>" method="POST">
    <input type="text" name="name">
    <button type="submit">Add Task</button>
</form>

<a href="/Task-Categories/<%= taskCategory.id %>/edit">Edit</a>

<%- include('../partials/footer.ejs') %>