<%- include('../partials/header') %>

<h2>Task Categories</h2>

<a href="/Task-Categories/new">Add a Task Category</a>

<ul>
    <% taskCategories.forEach(function(taskCategory) { %>
        <li>
            <form action="/Task-Categories/<%= taskCategory.id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
                <a id="edit-btn" class="btn btn-outline-secondary btn-sm" href="/Task-Categories/<%= taskCategory.id %>/edit">Edit</a>
            </form>
            <a href="/Task-Categories/<%= taskCategory.id %>">
                <%= taskCategory.name %> 
            </a>
        </li>
        <% }); %>
</ul>

<%- include('../partials/footer') %>

